<odoo>
    <record id="view_employee_form_inherit_nrc" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.nrc</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <!-- add nrc field -->
            <xpath expr="//field[@name='country_id']" position="after">
                <label for="nrc_number" string="NRC No." class="o_form_label"/>

                <!-- Editable NRC Components -->
                <div class="o_row" name="nrc_number_section">
                    <field name="nrc_state_code" placeholder="State" class="col-1" style="min-width: 40px;"/>
                    <div>/</div>
                    <field name="nrc_township_id" placeholder="Township" class="col-3" style="min-width: 120px;"/>
                    <div>(</div>
                    <field name="nrc_citizenship" placeholder="N/F" class="col-2" style="min-width: 50px;"/>
                    <div>)</div>
                    <field name="nrc_number" placeholder="123456" class="col-2" style="min-width: 80px;"/>
                </div>

            </xpath>

            <!-- add join date field -->
            <xpath expr="//field[@name='address_id']" position="after">
                <field name="join_date"/>
            </xpath>


            <!-- add off day field -->
            <xpath expr="//field[@name='join_date']" position="after">
                <field name="off_day" widget="many2many_tags"/>
            </xpath>

            <!-- hide work locatin field -->
            <field name="work_location_id" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>

            <!-- attendance group hide -->
            <xpath expr="//group[@name='identification_group']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- show private email and address -->
             <xpath expr="//field[@name='private_email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>


            <!-- hide language field -->
            <field name="lang" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Hide the div that holds the home work distance field and span -->
            <xpath expr="//label[@for='km_home_work']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='div_km_home_work']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- hide identification_id field -->
            <field name="identification_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- hide passport number field -->
            <field name="passport_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- hide place and country of birth field -->
            <field name="place_of_birth" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="country_of_birth" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- hide work permit fields and add SSB No. field -->
            <field name="visa_no" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//field[@name='permit_no']" position="attributes">
                <attribute name="string">SSB No.</attribute>
            </xpath>
            <field name="visa_expire" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="work_permit_expiration_date" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="has_work_permit" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- hide related user field -->
            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <!-- Hide the existing mobile_phone field -->
                <xpath expr="//field[@name='mobile_phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Add new employee_id field before work_phone -->
                <xpath expr="//field[@name='work_phone']" position="before">
                    <field name="employee_number"/>
                </xpath>

                <field name="address_home_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="bank_account_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <!-- Add personal emial and phone -->
                <xpath expr="//field[@name='address_home_id']" position="after">
                    <field name="home_address" />
                    <field name="personal_email" />
                    <field name="personal_phone" />
                    <field name="bank_account" />
                </xpath>
          
             <xpath expr="//group[@name='managers']" position="inside">
                <field name="hr_officer_names" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='certificate']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>

            
            <field name="resource_calendar_id" attrs="{'invisible': [('id', '!=', 0)]}"/>


            <xpath expr="//field[@name='resource_calendar_id']" position="after" optional="true">
                <field name="resource_calendar_ids" widget="many2many_tags"/>
            </xpath>


                
        </field>
    </record>
    
    
</odoo>
